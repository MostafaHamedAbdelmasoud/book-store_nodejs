extends layouts/Auth_layout

block content
    h3.card-title.text-left.mb-3 Register
    form(action='/register' method='post')
        .form-group
            label Name
            input.form-control.p_input(type='text' name='name')
        .form-group
            label Email
            input.form-control.p_input(type='email' name='email')
        .form-group
            label Password
            input.form-control.p_input(type='password' name='password')
        .form-group.d-flex.align-items-center.justify-content-between
            .form-check
                label.form-check-label
                    input.form-check-input(type='checkbox')
                    |  Remember me
            a.forgot-pass(href='#') Forgot password
        .text-center
            button.btn.btn-primary.btn-block.enter-btn(type='submit') Login
        .d-flex
            button.btn.btn-facebook.col.mr-2
                i.mdi.mdi-facebook
                |  Facebook
            button.btn.btn-google.col
                i.mdi.mdi-google-plus
                |  Google plus
        p.sign-up.text-center
            | Already have an Account?
            a(href='/login')  Sign In
