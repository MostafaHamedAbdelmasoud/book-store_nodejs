extends ../layouts/layout

block content
    .content-wrapper
        .page-header
            h3.page-title  Books
        .row
            .col-12.grid-margin.stretch-card
                .card
                    .card-body
                        h4.card-title Basic form elements
                        p.card-description  Basic form elements
                        form.forms-sample(action='/books/create' method="post" enctype="multipart/form-data")
                            .form-group
                                label(for='exampleInputName1') Name
                                input#exampleInputName1.form-control(type='text' name="name" placeholder='Name')
                            .form-group
                                label File upload
                                input.form-control(type='file' name='file')
                            .form-group
                                label Preview Image upload
                                input.form-control(type='file' name='image')
                            .form-group
                                label(for='exampleTextarea1') Description
                                textarea#exampleTextarea1.form-control(name="description" rows='4')
                            button.btn.btn-primary.mr-2(type='submit') Submit
                            button.btn.btn-dark Cancel
